# ==========================================================================
# Build system
# ==========================================================================

CFLAGS += \
          -mno-red-zone \
	  -mno-outline-atomics \
	  -mstrict-align \
	  -Werror=pointer-sign \
	  -fomit-frame-pointer \
	  -Werror-implicit-function-declaration

LDFLAGS += --fatal-warnings

