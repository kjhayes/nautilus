menu "Devices"

menu "Serial Options"

config SERIAL_REDIRECT
    bool "Serial Redirect"
    depends on !HVM_HRT && ARCH_X86 && !PC_8250_UART
    default n
    help
        Redirect printing to serial device
        Uses early serial output at boot and then
        switches to ordinary serial interface afterwards
        What specifically is printed to serial also depends
        on how mirroring is set up (if at all) in the 
        virtual console configuration

config SERIAL_REDIRECT_PORT
    depends on SERIAL_REDIRECT
    int "Serial COM Port for redirection"
    range 1 4
    default "1"
    help
      Specifies which serial port to use for serial redirection. E.g. 1 is COM1.
      This must be different from your debug port!

config SERIAL_DEBUGGER
    bool "Serial Debugger"
    depends on ENABLE_REMOTE_DEBUGGING && ARCH_X86 && !PC_8250_UART
    default n
    help
        Provide a simple serial interface to a remote debugger

config SERIAL_DEBUGGER_PORT
    depends on SERIAL_DEBUGGER
    int "Serial COM Port for remote debugger interface"
    range 1 4
    default "2"
    help
      Specifies which serial port to use for serial connection to 
      a remote debugger (e.g. gdb).   1 is COM1, etc.  This must
      be different from your redirect port!
      
endmenu      

config SIFIVE_GPIO
    bool "SiFive GPIO"
    depends on ARCH_RISCV
    default y
    help
       Enable driver for SiFive GPIO

config SIFIVE_PLIC
    bool "SiFive Platform Level Interrupt Controller"
    depends on ARCH_RISCV
    help
      Provide a driver for the RISC-V Platform Level Interrupt Controller (PLIC)

config DEBUG_SIFIVE_PLIC
    bool "Debug SiFive Platform Level Interrupt Controller"
    depends on DEBUG_PRINTS && SIFIVE_PLIC
    help
      Debug the RISC-V Platform Level Interrupt Controller (PLIC)

config ARM_GIC
    bool "ARM Generic Interrupt Controller Driver"
    depends on ARCH_ARM64
    default y
    help
      Provide a driver for the ARM Generic Interrupt Controller (GIC)

choice 
    prompt "GIC Version"
    depends on ARCH_ARM64 && ARM_GIC
    default GIC_VERSION_2M

    config GIC_VERSION_2
      bool "Arm GICv2"

    config GIC_VERSION_2M
      bool "Arm GICv2m"
      select HAS_MSI
      
    config GIC_VERSION_3
      bool "Arm GICv3"
      select HAS_MSI

endchoice

config DEBUG_GIC
    bool "Debug GIC"
    depends on ARCH_ARM64 && ARM_GIC
    default n
    help
      Debug the Generic Interrupt Controller for the ARM64 Architecture

config GENERIC_8250_UART
    bool
    default n
    help
      Include a base 8250 UART implementation which can be used by other UART drivers

config DEBUG_GENERIC_8250_UART
    bool
    default n
    help
      Debug the generic 8250 UART implementation

config OF_8250_UART
    bool "Generic OF 8250 UART"
    depends on USE_FDT
    select GENERIC_8250_UART
    default n
    help
      Driver for Generic NS8250 UART found in the device tree, see 
      Linux's "linux/Documentation/device-tree/bindings/tty/serial/of-serial.txt" for the exact binding

config DEBUG_OF_8250_UART
    bool "Debug Generic OF 8250 UART"
    depends on DEBUG_PRINTS && OF_8250_UART
    default n
    help
      Debug the generic device tree NS8250 UART driver

config OF_8250_UART_EARLY_OUTPUT
    bool "Generic OF 8250 UART Early Output"
    depends on OF_8250_UART
    default n
    help
      Try to use the Generic 8250 UART found in the device tree for early output before the Virtual Console

config PC_8250_UART
    bool "PC 8250 UART"
    depends on ARCH_X86 && !STANDALONE_SERIAL_DRIVER
    select GENERIC_8250_UART
    default n
    help
      Driver for PC serial ports based on the generic 8250 framework in Nautilus.
      Selecting this disables the original serial port driver.

config DEBUG_PC_8250_UART
    bool "Debug PC 8250 UART"
    depends on DEBUG_PRINTS && PC_8250_UART
    select DEBUG_GENERIC_8250_UART

config PC_8250_UART_EARLY_OUTPUT
    bool "PC 8250 UART Early Output"
    depends on PC_8250_UART
    default n
    help
      Use one of the PC COM Ports for Early Output

config PC_8250_UART_EARLY_COM_PORT
    int "PC 8250 UART Early COM Port"
    depends on PC_8250_UART_EARLY_OUTPUT
    default 1
    help
      Specify which COM port should be used for early output

config DW_8250_UART
    bool "DesignWare UART"
    depends on USE_FDT
    select GENERIC_8250_UART
    default n
    help
      Driver for the Designware Serial UART

config DW_8250_UART_EARLY_OUTPUT
    bool "DesignWare UART Early Output"
    depends on DW_8250_UART
    default n
    help
      Register the DesignWare 8250 UART for output before the virtual console system is active

config DEBUG_DW_8250_UART
    bool "Debug DesignWare UART"
    depends on DEBUG_PRINTS && DW_8250_UART
    select DEBUG_GENERIC_8250_UART
    default n
    help
      Debug the DesignWare UART Driver

config PL011_UART
